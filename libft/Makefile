NAME = libft.a

CC = gcc

FLAG = -Werror -Wall -Wextra

OBJ = $(SRC_FILES:.c=.o)

SRC_FILES = ft_strcat.c ft_isprint.c ft_putchar.c ft_putnbr.c ft_putstr.c \
			ft_strclr.c ft_strncat.c ft_isdigit.c ft_strcat.c ft_memdel.c \
			ft_strncpy.c ft_strcpy.c ft_strdel.c ft_toupper.c ft_strnew.c \
			ft_tolower.c ft_atoi.c ft_isalnum.c ft_isascii.c ft_bzero.c \
			ft_memcpy.c ft_memset.c ft_strnstr.c ft_strstr.c ft_memchr.c \
			ft_itoa.c ft_strlen.c ft_strdup.c ft_strlcat.c ft_memmove.c \
			ft_strchr.c ft_strrchr.c ft_strcmp.c ft_strncmp.c ft_isalpha.c \
			ft_memccpy.c ft_memcmp.c ft_putchar_fd.c ft_isstrempty.c \
			ft_memalloc.c ft_striter.c ft_striteri.c ft_strmap.c ft_strmapi.c \
			ft_strequ.c ft_strnequ.c ft_strsub.c ft_strjoin.c ft_strtrim.c \
			ft_putnbr.c ft_strsplit.c ft_putstr_fd.c ft_putendl_fd.c \
			ft_putendl.c ft_putnbr_fd.c ft_realloc.c ft_lstnew.c ft_putnbrn.c \
			get_next_line.c ft_lstdelone.c ft_lstdel.c ft_lstadd.c \
			ft_lstiter.c ft_lstmap.c ft_lstins.c ft_lstat.c ft_lstsort.c \
			ft_strjoin_sep.c ft_lstfree.c ft_tabfree.c ft_print_tab.c \

HEADER = libft.h

all: $(NAME)

%.o: %.c
	@$(CC) $(FLAG) -c $^ -o $@ -I $(HEADER) 
	@printf %b "\033[1;93mCompiling "
	@printf "$@..."
	@printf "                                          "
	@printf "\r"

$(NAME): $(OBJ)
	@ar -rc $(NAME) $(OBJ) $@ $^
	@ranlib $(NAME)
	@echo "\033[2J"
	@echo "\033[1;93m                          _________________"
	@echo "                     ____/:::::::::::::::::\\_____"
	@echo "                  __/::::::::::::::::::::::::::::\\___"
	@echo "                _/:::::::::::::::::::::::::::::::::::\\__"
	@echo "              _/::::::::::::::::::::::::::::::::::::::::\\_"
	@echo "             /::::::::::::::::::::::::::::::::::::::::::::\\"
	@echo "            |::::::::::::::::::::::::::::::::::::::::::::::\\"
	@echo "           /::::::::::::::::::::::::::::::::::::::::::::::::\\"
	@echo "          |:::/.:::::::;:::::::::::::::::::::::::::::::::::::|"
	@echo "         /:::/.:::::::/..::::::::::::::::::::::::::::::::::::::\\"
	@echo "         |:::|.::::::;/.::::::::::::::::::::::::::::::::::::::::|"
	@echo "         |::/.::::::/..:::::::;;'.::::::::::::::::::::::::::::::|"
	@echo "         |:|.::::/./.::::::;;/..:::::::::::::::::::::::::::::::::|"
	@echo "         \`:|.:::|.|.:::::;/..;;;;;;-'.:;;;-':::::::::::::::::::::|"
	@echo "          \\|.:::|.|.:::;/.;;/  -..::'''...:::::::::::::::::::::::|"
	@echo "           \\;;::|.|.::/.;/--__      |::::::::::::::::::::::::::::|"
	@echo "              \\;;\\\\::/|/ =-__ --_  /::::::::::::::::::::::::::::::|"
	@echo "                  \\\\/    \033[1;96m/| \033[1;93m -._  |.::::::::::::::::::::::::::::::|"
	@echo "                 \033[1;95m_.'   \033[1;96m/\033[1;97m/\033[1;96m/ \033[1;93m  /-  ||::::::::::::::::::::::::::::::|"
	@echo "             \033[1;95m_.-'   \033[1;96m  ///  \033[1;93m      ||::::::::::::::::::::::::::::::|"
	@echo "            \033[1;95m|         \033[1;96m - \033[1;93m         \`|:::::::::::::::::::::::::::::|"
	@echo "             \033[1;95m\\                      \033[1;93m\\::::::::::::::::::::::::::::|"
	@echo "             \033[1;95m|                      \033[1;93m\\::::::::::::::::::::::::::::|"
	@echo "         \033[1;95m   /                      \033[1;93m__/:::::::::::::::::::::::::::|"
	@echo "          \033[1;95m  \\                   \033[1;93m__/::;::;;::::::       ::::::::::|"
	@echo "           \033[1;95m |\`                 \033[1;93m/;;;;/::\033[1;95m|  \\ \033[1;93m:::  \033[0;92mL    \033[1;93m  :::::::::|"
	@echo "           \033[1;95m \\                  \033[1;93m|'_,::::\033[1;95m/ \\ |\033[1;93m:::  \033[0;92mI     \033[1;93m :::::::::|"
	@echo "           \033[1;95m /                \033[1;93m_/::::::\033[1;95m/  / /\033[1;93m::::  \033[0;92mB     \033[1;93m :::::::::|"
	@echo "           \033[1;95m|                \033[1;93m/.::;;:\033[1;95m-'_)/_/\033[1;93m:::::  \033[0;92mF     \033[1;93m :::::::::|"
	@echo "----.__    \033[1;95m|\033[1;93m              |.::::\033[1;95m|  \\___/\033[1;93m:::::::  \033[0;92mT     \033[1;93m :::::::::|"
	@echo ":::::::\`----\033[1;95m\\_____\033[1;93m         \\\\:::::\033[1;95m\\.-'\033[1;93m::::::::::      \033[0;92mC \033[1;93m :::::::::|"
	@echo ";;;;;:::::::::::::\033[1;95m\`------\033[1;93m     \\::::::::::::::::      \033[0;92mO \033[0;93m :::::::::|"
	@echo "     \`-------:::::::\\         /::::::::::::::::      \033[0;92mM\033[1;93m  :::::::::|"
	@echo "___.--------'::::::::\\       |:::::::::::::::::      \033[0;92mP\033[1;93m  :::::::::|"
	@echo ":::::;;;:--:::::::::::|      /:::::::::::::::::      \033[0;92mI\033[1;93m  :::::::::|"
	@echo "----'  _,-:.:::::::::::\\    |.:::::::::::::::::      \033[0;92mL\033[1;93m  :::::::::|"
	@echo "    __/.::::::::::::::::|   |.:::::::::::::::::      \033[0;92mE\033[1;93m  :::::::::|"
	@echo " __/.:::;;::::::::;/.:::|   |.:::::::::::::::::      \033[0;92mD\033[1;93m  :::::::::|"
	@echo "/.::::;/ /.:::::;/ |.::::|   \\_.:::::::::::::::         :::::::::|"
	@echo ":::::/  /.:::::/  /.:::::|     \\__.::::::::::::      \033[0;92m~\033[1;93m  :::::::::|"
	@echo "::::|  |.:::::/  /.:::::.|        \\,::::::::::::       ::::::::::|"
	@echo "::::|  |.::::|   |.:::::/|       __/:::::::::::::::::::::::::::::|"
	@echo "\\.:::\\  \\.:::|   |.::::||| __.--:::::::::::::::::::::::::::::::::|"
	@echo "\\.:::\\_ \\.:::\\   \\.:::'/.::::::::::::::::::::::::::::::::::::::::|"
	@echo " \\.::::\\ \\.:::\\   \\.:::::::::::::::::::::::::::::::::::::::::::::|\033[0m"
	@echo ""

clean:
	@rm -f $(OBJ)	

fclean: clean
	@rm -f $(NAME)
	@echo ""
	@echo "\033[1;92m* ---------------- *"
	@echo "|  Lib cleaned  !  |"
	@echo "* ---------------- *"
	@echo ""

re: fclean all
